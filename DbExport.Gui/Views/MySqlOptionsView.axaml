<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:DbExport.Gui.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DbExport.Gui.Views.MySqlOptionsView"
             x:DataType="vm:MySqlOptionsViewModel">

    <Design.DataContext>
        <vm:MySqlOptionsViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto, Auto"
          ColumnDefinitions="Auto, *, Auto, *"
          RowSpacing="10"
          ColumnSpacing="10">
        <Grid.Styles>
            <Style Selector="Label">
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
            <Style Selector="ComboBox">
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
            </Style>
        </Grid.Styles>
        <Label Grid.Row="0"
               Grid.Column="0"
               Content="Storage engine :"
               Target="StorageEngineComboBox"/>
        <ComboBox Name="StorageEngineComboBox"
                  Grid.Row="0"
                  Grid.Column="1"
                  ItemsSource="{Binding StorageEngines}"
                  SelectedItem="{Binding StorageEngine}"/>
        <Label Grid.Row="0"
               Grid.Column="2"
               Content="Character set :"
               Target="CharacterSetComboBox"/>
        <ComboBox Name="CharacterSetComboBox"
                  Grid.Row="0"
                  Grid.Column="3"
                  ItemsSource="{Binding CharacterSets}"
                  SelectedItem="{Binding CharacterSet}"/>
        <Label Grid.Row="1"
               Grid.Column="0"
               Content="Collation :"
               Target="CollationComboBox"/>
        <ComboBox Name="CollationComboBox"
                  Grid.Row="1"
                  Grid.Column="1"
                  Grid.ColumnSpan="3"
                  ItemsSource="{Binding Collations}"
                  SelectedItem="{Binding Collation}"/>
    </Grid>
</UserControl>