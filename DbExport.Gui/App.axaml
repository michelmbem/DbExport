<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="DbExport.Gui.App"
             xmlns:local="using:DbExport.Gui"
             RequestedThemeVariant="Default">
    <!-- "Default" ThemeVariant follows the system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="Styles.axaml" />
        <StyleInclude Source="avares://AvaloniaEdit/Themes/Fluent/AvaloniaEdit.xaml" />
    </Application.Styles>

    <Application.Resources>
        <!-- Font families -->
        <FontFamily x:Key="Bauhaus">avares://dbexport/Assets/Fonts/Bauhaus.ttf#Bauhaus</FontFamily>
        <FontFamily x:Key="Roboto">avares://dbexport/Assets/Fonts/Roboto#Roboto</FontFamily>
        <FontFamily x:Key="RobotoMono">avares://dbexport/Assets/Fonts/RobotoMono#Roboto Mono</FontFamily>

        <!-- Colors -->
        <SolidColorBrush x:Key="OverlayBackground" Color="#CC777777" />
    </Application.Resources>
</Application>